<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>

  <%- include("partials/head") -%>

  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="/styles/content-review-styles.css">
</head>


<style>
  body,
  p,
  h1,
  h2,
  h3,
  s h4 {
    color: #595959;
  }

  .grey-heading {
    background-color: #CCCCCC;
    padding: .3em 1em .1em;
    margin-bottom: .5em;
  }

  .carousel-item {
    object-fit: contain;
    background-color: #E7E7E7;
  }

  .carousel-item img {
    margin: auto;
  }

  .article-logo {
    max-width: 100%;
  }
</style>

<body>
  <%- include("partials/header") -%>

  <!-- MAIN SECTION -->


  <div class="container-fluid pt-3 pb-3">
    <div class="container introduction">
      <div class="row justify-content-md-center">
        <div class="col-lg-6 col-sm">
          <a target="_blank" href=<%= review.link %>>
            <h3><%= review.name %></h3>
          </a>
          <p>
            Link: <a href=<%= review.link %>><%= review.link %></a><br>
            Contact: <%= review.email %><br>
            Level: <%= review.level %><br>
            Format: <%= review.format %></p>
        </div>
        <div class="col-lg-4 col-sm mb-4">
          <img class="article-logo" src="images/Language Tree Logo.png" alt="">
        </div>

      </div>
    </div>
  </div>

  <!-- CAROUSEL -->
  <div class="container-fluid carousel">
    <div id="carouselExampleIndicators" class="carousel slide">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-75" src="images/language-tree.png" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-75" src="..." alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-75" src="..." alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <!-- GREY AREA -->
  <% review.sections.forEach(function(section) {  %>
    <div class="container-fluid grey-heading">
      <div class="container-row">
        <h3><%= section.title %> <a href="https://www.languagetreeonline.com">Language Tree Online</a></h3>
      </div>
    </div>
    <!-- PARAGRAPH WITH HEADING -->
    <% section.subheadings.forEach(function(subheading){ %>
      <div class="container">
        <h3><%= subheading.title %></h3>
        <p><%= subheading.content %></p>
      </div>
    <% }); %>
  <% }); %>

  </div>


  <!-- FOOTER -->
  <%- include("partials/footer") -%>
  <script type="text/javascript" src="/index.js" charset="utf-8"></script>
</body>
</section>

</html>