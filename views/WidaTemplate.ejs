  <script src="https://kit.fontawesome.com/4250429874.js" crossorigin="anonymous"></script>

</head>

<body>

<!-- INCLUDES HEADER FROM views/header.ejs -->
<%- include("header") -%>

  <!-- STATE HEADING -->
  <section id="state-heading">

    <div class="container-fluid state-heading">
      <div class="row">

        <div class="col-6 state-columns">
          <h3 class="state-heading-links">
            <a href="#">< Back to Map</a></h3>


              <img class="state-image"src="images/newyork.png" alt="">


                <h1><%= records.state_details.Description %></h1>

              <!-- <% Object.keys(records).forEach(function(key, index){ const record = records[key] %>

                <h1><%= record['Hierarchy Type'] %><%= record.Description %></h1>

              <% }) %> -->

        </div>

        <!-- JUMP TO  -->
        <div class="col-6 state-columns">
          <h3>Jump To:</h3>
          <ul>
            <li class="state-heading-links"><a href="#covid_resources">COVID-19 Resources</a></li>
            <li class="state-heading-links"><a href="#departments_of_education">Departments of Education</a></li>
            <li class="state-heading-links"><a href="#departments_of_cultural">Departments of Cultural and Linguistic Diversity</a></li>
            <li class="state-heading-links"><a href="#program_resources">Program Resources</a></li>
            <li class="state-heading-links"><a href="#tests_for_ells">Tests For English Language Learners</a></li>
            <li class="state-heading-links"><a href="#ny_doe">NY DOE ELD Framework</a></li>
          </ul>
        </div>
      </div>
    </div>

  </section>

  <section id="covid-resources">
    <div class="container covid-resources">
      <div class="row">
        <div class="col">
          <h2 id="covid_resources"class="covid-heading"><i class="fas fa-virus"></i> <%= records.covid_resources.Description %></h2>
        </div>
      </div>

    <div class="row">


        <div class="col-6">
          <h2>COVID Updates</h2>
          <h3>New York City Department of Education</h3>
          <ul>
            <li>Chosing Remote Instruction for Fall</li>
            <li>Welcome to the 2020-2021 School Year</li>
          </ul>
        </div>

        <div class="col-6">
          <h2>Serving ELLs During COVID</h2>
          <h3>New York City Department of Education</h3>
          <ul>
            <li>Equity and Excellence: Our Continued Commitment</li>
            <li>Welcome to the 2020-2021 School Year</li>
          </ul>
        </div>

          </div>
      </div>


  </section>

  <section id="contents">
    <div class="container-fluid main-content">

      <!-- DEPARTMENT OF EDUCATION WITHOUT SUBHEADINGS -->


      <div class="row">
        <div class="col">
          <% hierarchy.general_resources.children.forEach(function(record){  %>
            <h2><%= record.description %></h2>
            <% if(record.children.length > 0) { %>
              <% record.children.forEach(function(child) {  %>
                <% if (child.type === 'section_subtitle') { %>
                  <h3><%= child.description %></h3>
                    <% child.children.forEach(function(grandchild) {  %>
                      <% if (grandchild.link) { %>
                        <!-- link -->
                        <ul>
                          <a href="<%= grandchild.link%>">
                            <li><%= grandchild.description %></li>
                          </a>
                        </ul>
                      <% } %>
                    <% }) %>
                <% } %>
              <% }) %>
            <% } %>
          <% }) %>
        </div>
      </div>
    </div>
  </section>
  
<!-- INCLUDES FOOTER FROM views/header.ejs -->
<%- include("footer") -%>
</html>
